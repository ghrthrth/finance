<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Светлая тема -->
    <style name="RoundedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Темная тема -->
    <style name="RoundedTextInputLayout.Dark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/dark_boxStrokeColor</item>
    </style>

    <style name="TextInputLayoutStyle.Dark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/dark_boxStrokeColor</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="ButtonStyle.Dark" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/dark_primaryColor</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">@color/dark_textColor</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/dark_primaryColor</item>
        <item name="colorPrimaryDark">@color/dark_primaryDarkColor</item>
        <item name="colorAccent">@color/dark_accentColor</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle.Dark</item>
        <item name="materialButtonStyle">@style/ButtonStyle.Dark</item>
    </style>
</resources>